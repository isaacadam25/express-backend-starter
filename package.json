{
  "name": "express-backend-starter",
  "version": "1.0.0",
  "description": "A backend starter for building backend projects",
  "main": "server.ts",
  "_moduleAliases": {
    "@": "build"
  },
  "scripts": {
    "dev": "nodemon build/server.js",
    "start": "node build/server.js",
    "watch": "tsc -w",
    "build": "tsc && cp -R src/* build/ && find build -type f -name '*.ts' -delete"
  },
  "author": "Issa Adam",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/jwt-decode": "^3.1.0",
    "@types/lodash": "^4.14.197",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.5",
    "@types/node": "^20.4.9",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^3.1.2",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.3",
    "mongoose": "^7.4.2",
    "morgan": "^1.10.0",
    "tsconfig-paths": "^4.2.0"
  }
}
